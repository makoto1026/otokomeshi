.header
  = render partial: "layouts/header"

.show-main
  .show-main__left
    .show-main__left--image
      = image_tag src= @post.image, height: "400", width: "340"
    .show-main__left--iine
      = render partial: 'likes/like', locals: { post: @post }
  .show-main__right
    .show-main__rigth--form
      投稿者 :  
      = @post.user.name
    .show-main__rigth--form
      タイトル :
      = @post.title 
    .show-main__rigth--form
      材料 :
      = @post.material
    .show-main__rigth--form
      レシピ :
      = @post.body
  .show-main__rigth--manage
    =link_to '編集', edit_post_path(@post.id), method: :get
    =link_to '削除', post_path(@post.id), method: :delete


.footer
  = render partial: "layouts/footer"