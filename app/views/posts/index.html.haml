.main
  .main__left
    .main__left--groups
      -@posts.each do |post| 
        .main__left--groups--lists
          .main__left--groups--lists--image
            = image_tag src= post.image, height: "230", width: "200", class: "img"
          .main__left--groups--lists--textBox
          .main__left--groups--lists--textBox--text
            .main__left--groups--lists--textBox--text  
            = post.title
  .main__right
    レシピ検索
    = form_for posts_searches_path, local: true, method: :get do |f|
      =f.text_field :keyword, placeholder: "キーワード検索", class: "main__right--searchbox"
      =f.submit "検索", class: "main__right--btn"
