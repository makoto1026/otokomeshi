.header
  =render partial: "layouts/header"
  
.mypage__main
  .mypage__main--left
    ユーザー情報編集
    = form_for(current_user) do |f|
      = f.text_field :name, autofocus: true, placeholder: " ユーザーネーム", class: "mypage__main--left--form"
      = f.email_field :email, placeholder: " メールアドレス", class: "mypage__main--left--form"
      = f.submit "更新", class: 'mypage__main--left--btn'
  .mypage__main--right
    マイレシピ一覧
    .mypage__main--right--groups
      -@posts.each do |post| 
        .mypage__main--right--groups--list
          .mypage__main--right--groups--list--image
            = link_to image_tag(post.image, height: "230", width: "200", class: "img"), post_path(post.id)
            .mypage__main--right--groups--list--textBox
              .mypage__main--right--groups--list--textBox--text
              = post.title

.footer
  = render partial: "layouts/footer"
