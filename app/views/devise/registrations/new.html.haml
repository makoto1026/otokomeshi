.sign_up-wrapper
  .sign_up-wrapper__left
    = image_tag src = "logo2.png", width: "750"
  .sign_up-wrapper__right
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .sign_up-wrapper__right--form
        = f.text_field :name, autofocus: true, placeholder: " ユーザーネーム", class: "form"
      .sign_up-wrapper__right--form
        = f.email_field :email, placeholder: " メールアドレス", class: "form"
      .sign_up-wrapper__right--form
        = f.password_field :password, autocomplete: "off", placeholder: " パスワード（英数字８文字以上）", class: "form"
      .sign_up-wrapper__right--form
        = f.password_field :password_confirmation, autocomplete: "off", placeholder: " パスワード再入力", class: "form"
      = f.submit "アカウント作成", class: 'sign_up-btn'
      = render "devise/shared/links"
