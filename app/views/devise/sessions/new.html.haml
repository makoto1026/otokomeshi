.top-wrapper
  .top-wrapper__main
    = image_tag src = "log.png", width: "600"
  .top-wrapper__bottom
    %h2 Log in
    %h5 登録しているユーザーでログイン
    = render "devise/shared/links"
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        .field-label
          = f.label :email
        .field-input
          = f.email_field :email, autofocus: true
        .field
          .field-label
            = f.label :password
            %i (英数字8文字以上)
          .field-input
            = f.password_field :password, autocomplete: "off"
        .actions
          = f.submit "Log in", class: 'btn'
